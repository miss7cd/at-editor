{
  "name": "at-editor",
  "version": "0.1.0",
  "description": "A modern, extensible rich text editor framework with plugin architecture and card system",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miss7cd/at-editor.git"
  },
  "keywords": [
    "rich-text-editor",
    "wysiwyg",
    "typescript",
    "plugin-system",
    "card-system",
    "markdown",
    "content-editable"
  ],
  "author": "miss7cd",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/miss7cd/at-editor/issues"
  },
  "homepage": "https://github.com/miss7cd/at-editor#readme",
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "colord": "^2.9.3",
    "copy-to-clipboard": "^3.3.3",
    "diff-match-patch": "^1.0.5",
    "dom-align": "^1.12.4",
    "eventemitter2": "^6.4.9",
    "is-hotkey": "^0.2.0",
    "lodash": "^4.17.21",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/diff-match-patch": "^1.0.32",
    "@types/is-hotkey": "^0.1.2",
    "@types/lodash": "^4.14.178",
    "@types/markdown-it": "^12.2.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=14.0.0"
  }
}
